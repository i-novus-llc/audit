<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Audit">
    <form object-id="audit" query-id="audit">
        <fields>
            <set>
                <text label="Система/Модуль" id="auditSourceApplication">Система/Модуль:{auditSourceApplication.name}</text>
                <text label="Идентификатор объекта" id="id">Идентификатор объекта:{id}</text>
                <text label="Наименование объекта" id="objectName">Наименование объекта:{auditObjectName.name}</text>
                <text label="Тип события" id="objectType">Тип события:{auditObjectType.name}</text>
                <text label="Дата и время" id="eventDate">Дата и время:{eventDate}</text>
                <text label="Имя пользователя" id="userName">Имя пользователя:{username}</text>
                <text label="Рабочая станция" id="auditSourceWorkstation">Рабочая станция:{sourceWorkstation}</text>
                <text label="Имя сервера" id="hostname">Имя сервера:{hostname}</text>
                <line expand="false" collapsible="true" label="Данные" field-label-location="left">
                    <text id="context" visible="false">{context}</text>
                    <code-editor id="context_json" label="context" language="javascript" rows="10">
                        <dependencies>
                            <set-value on="context">
                                str = context;
                                str = str.split("'").join("\"");
                                str = str.replace("{", "{\n\t");
                                str = str.replace("}", "\n}");
                                return str.split(",").join(",\n\t");
                            </set-value>
                        </dependencies>
                    </code-editor>
                </line>
            </set>
        </fields>
    </form>
</simple-page>