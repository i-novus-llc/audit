<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      object-id="auditBase"
      name="Журнал действий пользователей">

    <regions>
        <region place="single">
            <table id="audit_table" query-id="auditAction" size="10" name="Аудит Данных">
                <filters>
                    <row>
                        <date-interval id="period" label="Дата и время" required="true" time-format="HH:mm">
                            <default-value begin="{moment().subtract(31, 'days').format('DD.MM.YYYY HH:mm:ss')}"
                                           end="{moment().format('DD.MM.YYYY HH:mm:ss')}"/>
                            <validations>
                                <condition id="checkDate" client-moment="before-load" severity="danger" side="client"
                                           message="Чтобы искать записи с интервалом больше 31 дня укажите Идентификатор объекта"
                                           src="/META-INF/js/validation.js" on="days_count, objectId"/>
                            </validations>
                        </date-interval>
                        <input-select id="auditSourceApplications" label="Система/Модуль" type="multi"
                                      query-id="auditSourceApplication"
                                      label-field-id="code"/>
                        <input-select id="auditEventTypes" label="Тип события" type="multi" query-id="auditEventType"
                                      label-field-id="name">
                            <pre-filters>
                                <eq field-id="auditTypeId" value="1"/>
                            </pre-filters>
                        </input-select>
                    </row>
                    <row>
                        <input-select id="auditObjects" label="Объект" type="multi" query-id="auditObject"
                                      label-field-id="name"/>
                        <input-text id="objectId" label="Идентификатор объекта" domain="string">
                            <validations>
                                <condition id="checkDate" client-moment="before-load" severity="danger" side="client"
                                           message="Укажите значение" src="/META-INF/js/validation.js" on="days_count, period"/>
                            </validations>
                        </input-text>

                        <input-text id="username" label="Пользователь" domain="string"/>
                    </row>
                    <hidden id="days_count">
                        <dependencies>
                            <set-value on="period" apply-on-init="true">
                                var period_begin = moment(period.begin, ["DD.MM.YYYY HH:mm:ss"]);
                                var period_end = moment(period.end, ["DD.MM.YYYY HH:mm:ss"]);
                                return period_end.diff(period_begin, 'days');
                            </set-value>
                        </dependencies>
                    </hidden>
                </filters>
                <columns>
                    <column text-field-id="eventDate" label="Дата и время"/>
                    <column text-field-id="sourceApplication" label="Система/Модуль"/>
                    <column text-field-id="sourceWorkstation" label="Рабочая станция"/>
                    <column text-field-id="hostname" sorting-field-id="hostname" sorting-direction="desc"
                            label="Имя сервера"/>
                    <column text-field-id="objectId" label="Идентификатор объекта"/>
                    <column text-field-id="objectTypeAndName" label="Объект"/>
                    <column text-field-id="username" label="Пользователь"/>
                    <column text-field-id="eventType" label="Тип события"/>
                </columns>
                <rows>
                    <click>
                        <show-modal page-id="auditActionForm" master-field-id="id" detail-field-id="id"/>
                    </click>
                </rows>
                <pre-filters>
                    <eq field-id="auditTypeId" value="1"/>
                </pre-filters>
            </table>
        </region>
    </regions>
</page>
