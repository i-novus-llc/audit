<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" name="Тип события">
    <list result-mapping="['content']" count-mapping="['totalElements']">
        <java method="findAllObjects" class="ru.i_novus.ms.audit.controller.AuditReferenceFrontendController">
            <spring/>
            <arguments>
                <argument class="ru.i_novus.ms.audit.criteria.AuditObjectCriteria" type="criteria"/>
            </arguments>
        </java>
    </list>
    <fields>
        <field id="id" domain="string">
            <select/>
        </field>
        <field id="type" domain="string">
            <select/>
        </field>
        <field id="name" domain="string">
            <select/>
        </field>
        <field id="typeAndName" domain="string">
            <select mapping="['type'] + ' ' + ['name']" normalize="#this.replace('null', '')"/>
            <filters>
                <eq filter-id="typeAndName" mapping="typeOrName"/>
            </filters>
        </field>
    </fields>
</query>

