<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0" name="Просмотр события">
    <form query-id="auditIntegrationForm">
        <fields>
            <set field-label-location="left">
                <output-text id="id" label="Идентификатор события: "  label-class="w-25"/>
                <output-text id="eventType" label="Действие: " label-class="w-25"/>
                <output-text id="sender" label="Отправитель: " label-class="w-25" />
                <output-text id="receiver" label="Получатель: " label-class="w-25"/>
                <output-text id="eventDate" label="Дата и время: " label-class="w-25"
                             format="date DD.MM.YYYY HH:mm:ss"/>
                <code-editor id="context" label="Данные: " max-lines="10" enabled="false" label-class="w-25"/>
            </set>
        </fields>
    </form>
</simple-page>
