<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Просмотр события">
    <form object-id="audit" query-id="audit">
        <fields>
            <set field-label-location="left">
                <output-text id="sourceApplication" label="Система/Модуль: " label-class="w-50"/>
                <output-text id="id" label="Идентификатор события: " label-class="w-50"/>
                <output-text id="objectId" label="Идентификатор объекта: " label-class="w-50" />
                <output-text id="objectType" label="Тип объекта: " label-class="w-50"/>
                <output-text id="objectName" label="Наименование объекта: " label-class="w-50"/>
                <output-text id="eventType" label="Тип события: " label-class="w-50"/>
                <output-text id="eventDate" label="Дата и время: " label-class="w-50"/>
                <output-text id="userName" label="Имя пользователя: " label-class="w-50"/>
                <output-text id="userId" label="Идентификатор пользователя: " label-class="w-50"/>
                <output-text id="sourceWorkstation" label="Рабочая станция: " label-class="w-50"/>
                <output-text id="hostname" label="Имя сервера: " label-class="w-50"/>
                <text-area id="context_json" label="Данные: " rows="10" enabled="false" label-class="w-50">
                    <dependencies>
                        <set-value>
                            str = context;
                            str = str.split("'").join("\"");
                            str = str.replace("{", "{\n\t");
                            str = str.replace("}", "\n}");
                            return str.split(",").join(",\n\t");
                        </set-value>
                    </dependencies>
                </text-area>
            </set>
        </fields>
    </form>
</simple-page>