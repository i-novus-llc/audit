<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Просмотр события">
    <form object-id="audit" query-id="audit">
        <fields>
            <set>
                <row>
                    <text id="sourceApplication_label">Система/Модуль:</text>
                    <text id="sourceApplication">{sourceApplication}</text>
                </row>
                <row>
                    <text id="id_label">Идентификатор события:</text>
                    <text id="id">{id}</text>
                </row>
                <row>
                    <text id="objectId_label">Идентификатор объекта:</text>
                    <text id="objectId">{objectId}</text>
                </row>
                <row>
                    <text id="objectType_label">Тип объекта:</text>
                    <text id="objectType">{objectType}</text>
                </row>
                <row>
                    <text id="objectName_label">Наименование объекта:</text>
                    <text id="objectName">{objectName}</text>
                </row>
                <row>
                    <text id="eventType_label">Тип события:</text>
                    <text id="eventType">{eventType}</text>
                </row>
                <row>
                    <text id="eventDate_label">Дата и время:</text>
                    <text id="eventDate">{eventDate}</text>
                </row>
                <row>
                    <text id="userName_label">Имя пользователя:</text>
                    <text id="userName">{username}</text>
                </row>
                <row>
                    <text id="userId_label">Идентификатор пользователя:</text>
                    <text id="userId">{userId}</text>
                </row>
                <row>
                    <text id="sourceWorkstation_label">Рабочая станция:</text>
                    <text id="sourceWorkstation">{sourceWorkstation}</text>
                </row>
                <row>
                    <text id="hostname_label">Имя сервера:</text>
                    <text id="hostname">{hostname}</text>
                </row>
                <row>
                    <text id="context_label">Данные:</text>
                    <line collapsible="true">
                        <text-area id="context_json" label="context" rows="10" enabled="false">
                            <dependencies>
                                <set-value>
                                    str = context;
                                    str = str.split("'").join("\"");
                                    str = str.replace("{", "{\n\t");
                                    str = str.replace("}", "\n}");
                                    return str.split(",").join(",\n\t");
                                </set-value>
                            </dependencies>
                        </text-area>
                    </line>
                </row>
            </set>
        </fields>
    </form>
</simple-page>